@{
    /*The part of this cshtml file above TODO #4 displays the 
     * inputs to select the type of search.
     * The part below TODO #4 displays the results 
     * after a submission is clicked.
     */
}

<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
                <!--searchType needs to be passed in to the SearchController
                    Results method. 
                    Its value is a key from a dictionary in ListController.
                    It will either be "all" or one of the four other options
                    such as "employer", "location", or "coreCompetency".
                -->
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>
        <!--searchTerm needs to be passed in to the SearchController
                    Results method. -->

        <input type="submit" value="Search" />
    </form>

    <hr />

    @{
        //TODO #4: Loop over the search results to display all job fields.
    }

    @if (ViewBag.jobs.Count > 0)
    {
        @foreach(var job in ViewBag.jobs)
        {
            <table class='job-listing'>
                <tr>
                    <th>ID: </th>
                    <td>@job.Id</td>
                </tr>
                <tr>
                    <th>Name: </th>
                    <td>@job.Name</td>
                </tr>

                <tr>
                    <th>Employer: </th>
                    <td>@job.Employer</td>
                </tr>
                <tr>
                    <th>Location: </th>
                    <td>@job.Location</td>
                </tr>
                <tr>
                    <th>Position Type: </th>
                    <td>@job.PositionType</td>
                <tr>
                    <th>Skill: </th>
                    <td>@job.CoreCompetency</td>
                </tr>
            </table>
        }
    }
    

</div>